{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/out/a"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }, 
        {
            "label": "mynvcc",
            "type": "shell",
            "command": "nvcc",
            "args": ["-g","-G","-o","${workspaceFolder}/out/a","${file}"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
        
    ],
    "version": "2.0.0"
}